<section style="margin-top: 200px;" class="order">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Order</h1>
            </div>
            <div class="col-lg-3">
                <img style="width: 200px;margin-top: 40px;display:inline-block;" src="<%=product.product[0].image%>" alt="">
            </div>
            <div style="padding-top: 40px;padding-left: 30px;" class="col-lg-8">
                <p style="font-size: 20px;"><%=product.product[0].name%></p>
                <p style="display: inline-block;">Price: </p> <p style="font-size: 18px;color: #ff4545;display: inline-block">$<%=product.product[0].price%></p>
                <p>Amount: <%=product.amount%></p>
                <p>Size: <%=product.size%></p>
                <br>
                <form style="margin-bottom: 50px;" action="/confirmOrder" method="post" enctype="multipart/form-data">
                    <input style="height: 43px;width: 250px;padding-left: 10px;" name="check" type="text"
                           placeholder="Write check number here...">
                    <input type="text" value="<%=product._id%>" style="display: none;" name="basketId">
                    <button value="Upload" class="addCart" style="background-color: #ff4545;
                    color: #ffffff;outline:none;border:none;padding: 10px 20px;margin-top: 30px;
                    border-radius: 3px;" type="submit">Confirm order</button>
                </form>

            </div>
            <hr>
            <div class="col-lg-5">
                <p style="margin-top: 50px;">To order this product, you need to send a certain amount to your account. <br>
                    Card: 5169 3425 4634 5934 <br>
                    Shipping: 3 $ <br>
                    Order amount: <%=(product.product[0].price * product.amount)+3%> $ <br>
                    After payment, please write check number <br></p>
            </div>
        </div>
    </div>
</section>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function() {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
